PATH=/sbin:/bin:/usr/sbin:/usr/bin

mkdir -p /proc
mkdir -p /sys
mkdir -p /dev

mount -t proc proc /proc
mount -t sysfs sysfs /sys
mount -t devtmpfs none /dev

mkdir -p /run
mkdir -p /var/run

/sbin/udevd --daemon
udevadm trigger --action=add
udevadm settle --timeout=3 --quiet

exec </dev/console >/dev/console 2>&1

cat <<EOF
*************************************
          Welcome to NEWBS!
          Version @PV@ (@DATE@)
*************************************
EOF

exec sh
